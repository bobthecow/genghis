<td>
  <a class="name value" href="{{ url }}">{{ name }}</a>
</td>
<td>
  <span class="documents value">{{ count }}</span>
</td>
<td>
  <span class="indexes has-details value">{{ indexCount }}</span>
  <div class="details" title="{{ indexCount }} Index{{# indexesIsPlural }}es{{/ indexesIsPlural }}">
    {{# indexCount }}
      <ul class="index-details">
        {{# indexes }}
          <li>{{{ . }}}</li>
        {{/ indexes }}
      </ul>
    {{/ indexCount }}
    {{^ indexCount }}
      <em>None.</em>
    {{/ indexCount }}
  </div>
</td>
<td>
  <span class="size has-details value">{{ humanSize }}</span>
  <div class="details" title="Collection Stats">
    <dl class="stats-details">
      {{# stats }}
        <dt>{{ name  }}</dt>
        <dd>{{ value }}</dd>
      {{/ stats }}
    </dl>
  </div>
</td>
<td class="action-column">
  <button class="btn btn-xs btn-default truncate">Empty</button>
  <button class="btn btn-xs btn-danger destroy">Remove</button>
</td>
